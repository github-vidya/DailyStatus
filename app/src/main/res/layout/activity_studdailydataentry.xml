<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B8C532"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:text="Daily Status"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Student ID"
        android:textStyle="bold|italic"></TextView>

    <TextView android:id="@+id/tvstudIDEntryForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stud_IDValue" android:paddingBottom="10dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Student Name"
        android:textStyle="bold|italic"></TextView>

    <TextView android:id="@+id/tvstudNameEntryForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stud_NameValue" android:paddingBottom="10dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Parent Email"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:id="@+id/tvparentmailIDEntryForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="vidyapillai87@gmail.com-DB"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Phone"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:id="@+id/tvphoneEntryForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="+912340129 - DB"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Date"
        android:textStyle="bold|italic"></TextView>

    <TextView android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Home Work"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:id="@+id/tvHWEntryform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Home work: Page 1,Page3"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Comments"
        android:textStyle="bold|italic"></TextView>

    <TextView
        android:id="@+id/tvCommentsEntryform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:paddingBottom="10dp"
        android:text="excellent"></TextView>

    <Button
        android:id="@+id/btnEntryForm_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Details" android:onClick="processSaveDetails"/>


</LinearLayout>